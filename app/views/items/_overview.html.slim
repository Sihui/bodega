h2 Inventory
p#inventory_size
  = render partial: "items/count", object: @company, as: :company

#item_list.form_rendered
  = render partial: "items/snippet", collection: @company.items, as: :item

#add_item.form_container
  - if current_user.belongs_to?(@company)
    = render partial: "items/form", locals: { action: "Add" }
